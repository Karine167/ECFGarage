{% extends 'base.html.twig' %}

{% block title %} Annonces de VÃ©hicules d'occasion {% endblock %}

{% block body %}
    
    <div class="row flex-row m-3">
        {% if (message != "") %}
            <div class="bg-warning"> {{message}} </div>
        {% endif %}
        {% include 'partials/advert/_filter.html.twig' with {form: form} only %}
    </div>
    
    <div class="row flex-row justify-content-center">
        {% for secondHandCar in secondHandCars %}
            {% include 'partials/advert/_advert_list.html.twig' %}
        {% endfor %}
        {% if isPaginated %}
            <div class="row mt-3">
                <nav aria-label="col Page navigation">
                    <ul class="pagination">
                        {% if page != 1 %}
                            <li class="page-item">
                                <a class="page-link" href="{{ path('app_advert_list', {page: page - 1, nbre: nbre})}}">Previous</a>
                            </li>
                        {% endif %}
                        {% for i in range(1, nbrePage) %}
                            <li class="page-item">
                                <a class="page-link" href="{{ path('app_advert_list', {page: i, nbre: nbre})}}">{{i}}</a>
                            </li>
                        {% endfor %}
                        {% if page != nbrePage %}
                            <li class="page-item">
                                <a class="page-link" href="{{ path('app_advert_list', {page: page + 1, nbre: nbre})}}">Next</a>
                            </li>
                        {% endif %}
                    </ul>
                </nav>
            </div>
        {% endif %}
    </div>

{% endblock %}

{% extends 'base.html.twig' %}

{% block title %} Annonces de VÃ©hicules d'occasion {% endblock %}

{% block body %}
    
    <div class="row flex-row m-3 js-filter-form">
        {% if (message != "") %}
            <div class="bg-warning"> {{message}} </div>
        {% endif %}
        {% include 'partials/advert/_filter.html.twig' with {form: form} only %}
    </div>
    
    <div class="row flex-row ms-3 justify-content-center js-filter-content">
        {% include 'advert_list/_Cars.html.twig'%}
        {% if isPaginated %}
            <div class="row mt-3 js-filter-page">
                <nav aria-label="col Page navigation">
                    <ul class="pagination">
                        {% if page != 1 %}
                            <li class="page-item">
                                <a class="page-link" href="{{ path('app_advert_list', {page: page - 1, kmMin: kmMin, kmMax: kmMax, priceMin: priceMin, priceMax: priceMax, yearMin: yearMin, yearMax: yearMax})}}">Previous</a>
                            </li>
                        {% endif %}
                        {% for i in range(1, nbrePage) %}
                            <li class="page-item">
                                <a class="page-link" href="{{ path('app_advert_list', {page: i, kmMin: kmMin, kmMax: kmMax, priceMin: priceMin, priceMax: priceMax, yearMin: yearMin, yearMax: yearMax})}}">{{i}}</a>
                            </li>
                        {% endfor %}
                        {% if page != nbrePage %}
                            <li class="page-item">
                                <a class="page-link" href="{{ path('app_advert_list', {page: page + 1, kmMin: kmMin, kmMax: kmMax, priceMin: priceMin, priceMax: priceMax, yearMin: yearMin, yearMax: yearMax})}}">Next</a>
                            </li>
                        {% endif %}
                    </ul>
                </nav>
            </div>
        {% endif %}
    </div>

{% endblock %}

<div class="col m-2">
    <div class="card" style="width: 18rem;"> 
            <h2> {{secondHandCar.reference}} </h2>
            {% if (photos[secondHandCar.Id])%}
                <img src="{{photoPath ~ photos[secondHandCar.Id]}}" class="card-img-top" alt="...">  
            {% else %}
                <img src="{{photoPath ~ 'DefaultCar.png'}}" class="card-img-top ms-3 w-75" alt="photo de {{secondHandCar.model.brand}} {{secondHandCar.model}} absente">  
            {% endif %} 
            <div class="card-body">
                <h5 class="card-title">{{secondHandCar.model.brand}} {{secondHandCar.model}}</h5>
                <p class="card-text">
                    <h6> Prix : {{secondHandCar.price}} â‚¬</h6>
                    <hr>
                    Mise en circulation : {{secondHandCar.CirculationYear.format("d/m/Y")}}<br>
                    km : {{secondHandCar.kilometers}}
                    <a href="{{ path('app_advert_oneCar',{'id': secondHandCar.id})}}" class="advert-list">Plus d'infos</a>
                </p>
            </div>
        
        <div class="card-footer">
            <strong> {{infos.5.title}}</strong>
            {{infos.5.content|raw}}
            <a href="{{ path('app_contact',{'ref': secondHandCar.id ~ secondHandCar.model.brand ~ secondHandCar.model })}}" class="btn btn-primary">Formulaire de contact</a>
        </div>
    </div>
</div>
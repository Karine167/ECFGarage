{% extends 'base.html.twig' %}
{% block title %} Administration du site {% endblock %}

{% block body %}
    <div class="d-flex ms-3 justify-content-center">
        {% if not app.user %}
            <h1> Vous devez être connecté pour pouvoir accéder à cette page ! </h1>
        {% else %}
            <div class="col col-2 my-3 ms-1">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link btn" aria-current="page" href="{{ path('admin_employee_list')}}">Employés </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link btn" aria-current="page" href="/">Annonces Véhicules</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link btn" aria-current="page" href="/"> Marques </a>
                    </li>
                </ul>
            </div>
            <div class="col col-9 m-3 js-filter-content">
                <h1> Bienvenue sur la nouvelle interface d'administration du site : </h1>

                <div class="col my-2">
                    {% include page %}
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}
<div class="card" style="width: auto"> 
    <h2> Informations sur l'employé : </h2>
    
    <div class="card-body">
        <h3 class="card-title">{{ employee }}</h3>
        <hr>
        <p class="card-text">
            <span class="fw-bold"> Nom : </span> {{employee.lastname}}
        </p>
        <p class="card-text">
            <span class="fw-bold"> Prénom : </span> {{employee.firstname}}
        </p>
        <p class="card-text">
            <span class="fw-bold"> Email : </span> {{employee.email}}
        </p>
        <p class="card-text">
            <span class="fw-bold"> Téléphone : </span> {{employee.telephon}}
        </p>
        <p class="card-text">
            <span class="fw-bold"> Adresse : </span> {{employee.address}}
        </p>
    </div>
    <div class="card-footer">
        <a href="{{ path('admin_employee_edit',{'id': employee.id})}}" class="btn btn-primary">Editer</a>
        {% if is_granted('ROLE_ADMIN')%}
            <a href="{{ path('admin_employee_delete',{'id': employee.id})}}" class="btn btn-primary">Supprimer</a>
            <a href="{{ path('admin_employee_list')}}" class="btn btn-primary">Liste</a>
        {% endif %}
    </div>
</div>